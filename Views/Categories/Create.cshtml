@model PPE.Models.Category

@{
    ViewData["Title"] = "Create Category";
    ViewBag.Buttons = new List<ButtonModel> {
        new ButtonModel {
            Text = "Back to list",
            Action = "Index",
            Controller = "Categories",
            ButtonType = "dark"
        }};
}

<div class="bg-white p-2">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-12">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="AttributeCategories" class="control-label"></label>
                <select name="attributes[]" class="form-control select2">
                    <option></option>
                    @foreach (var value in ViewBag.Attributes )
                    {
                        <option value="@value.Value">
                            @value.Text
                        </option>
                    }
                </select>
                <span asp-validation-for="AttributeCategories" class="text-danger"></span>
                </div>
            <div class="form-group col-12">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="button" onclick="submitBtn()" value="Create" class="btn btn-primary"/>
        </div>
    </form>
</div>

