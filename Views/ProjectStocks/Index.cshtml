@model IEnumerable<PPE.Models.ProjectStock>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PpeAttributeCategoryAttributeValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityStock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Prefix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PpeAttributeCategoryAttributeValue.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityStock)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
