@model IEnumerable<PPE.Models.Stoke>

@{
    ViewData["Title"] = "Liste des alimentations du stock";
    ViewBag.Buttons = new List<ButtonModel> {
        new ButtonModel {
            Text = "Nouvelle alimentation du stock",
            Action = "Create",
            Controller = "Stokes",
            ButtonType = "primary"
        }
    };
}

<div class="card">
    <div class="card-header">
        <div class="filters">
            <div class="row">
                @*<div class="col-md-4 form-group">
                    <label class="control-label">
                        <i class="la la-filter"></i>
                        Date de l'alimentation
                    </label>
                    <input type="date" class="form-control" id="filter-date" />
                    <span class="text-danger"></span>
                </div>*@
                <div class="col-md-3 form-group">
                    <label class="control-label">
                        <i class="la la-filter"></i>
                        From
                    </label>
                    <input type="date" class="form-control" data-filter="startDate" />
                    <span class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label class="control-label">
                        <i class="la la-filter"></i>
                        To
                    </label>
                    <input type="date" class="form-control" data-filter="endDate"/>
                    <span class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label class="control-label">
                        <i class="la la-filter"></i>
                        Référence de l'alimentation
                    </label>
                    <input class="form-control" id="filter-reference" />
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover table-checkable order-column responsive"
               data-column="date,reference,document,magazinier,responsable,actions"
               data-url="/api/stokes/getstokes">
                    <thead>
                        <tr class="bg-light">
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reference)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Document)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Magazinier)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Responsable)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
    </div>
</div>

