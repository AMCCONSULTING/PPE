<div class="bg-white mt-2">
   <table class="table">
       <thead>
           <tr>
               @*<th>
                   @Html.DisplayNameFor(model => model.Quantity)
               </th>*@
               <th>
                   @Html.DisplayNameFor(model => model.Date)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.VariantValue.Variant.Ppe)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.VariantValue.Variant)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.Project)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.StockIn)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.StockOut)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.CurrentStock)
               </th>
               <th></th>
           </tr>
       </thead>
       <tbody>
   @foreach (var item in Model) {
           <tr>
               @*<td>
                   @Html.DisplayFor(modelItem => item.Quantity)
               </td>*@
               <td>
                   @* @Html.DisplayFor(modelItem => item.Date) *@
                   @item.Date.ToString("dd/MM/yyyy")
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.VariantValue.Variant.Ppe.Title)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.VariantValue.Value) 
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.Project.Prefix)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.StockIn)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.StockOut)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.CurrentStock)
               </td>
               <td>
                   <div class="btn-group">
                       <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@item.Id">
                           <i class="la la-edit"></i>
                       </a> 
                       <a asp-action="Details" class="btn btn-sm btn-dark" asp-route-id="@item.Id">
                            <i class="la la-eye"></i>
                       </a> 
                       <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">
                           <i class="la la-trash"></i>
                       </a>
                   </div>
               </td>
           </tr>
   }
       </tbody>
   </table> 
</div>

