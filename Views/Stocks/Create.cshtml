@model PPE.Models.Stock

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Stock</h4>
<hr />
<form asp-action="SaveStocks" asp-controller="Stocks">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4 col-12">
                    <label asp-for="Date" class="control-label"></label>
                    <input 
                        asp-for="Date"  
                        class="form-control"/>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="col-md-4 col-12">
                    <label asp-for="ProjectId" class="control-label"></label>
                    <select 
                        asp-for="ProjectId" 
                        data-placeholder="Select a project"
                        class="form-control select2 selectProject"
                        asp-items="ViewBag.ProjectId">
                        <option></option>
                    </select>
                </div>
                <div class="col-md-4 col-12">
                    <label asp-for="VariantValueId" class="control-label"></label>
                    <select class="form-control select2 selectVariantValue">
                        @foreach (var item in ViewBag.VariantValueId)
                        {
                            <option value="@item.Value" selected="@item.Selected">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>
            </div>
            
                @*<div class="form-group">
                <label asp-for="StockIn" class="control-label"></label>
                <input asp-for="StockIn" class="form-control"/>
                <span asp-validation-for="StockIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockOut" class="control-label"></label>
                <input asp-for="StockOut" class="form-control"/>
                <span asp-validation-for="StockOut" class="text-danger"></span>
            </div>*@
            
            
                <div class="form-group mt-2">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>

            </div>
            <div class="col-md-12">
                <table class="table stockTable">
                    <thead>
                    <tr>
                        <th>PPE - Variant</th>
                        <th>Stock In</th>
                        <th>Stock Out</th>
                        <th>Options</th>
                    </tr></thead>
                    <tbody id="stockTable">
                        
                    </tbody>
                </table>
            </div>
        </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
   <script>
       $(document).ready(function () {
           $('.selectProject').on('change',function () {
               const id = $(this).val();
               $.ajax({
                   url: '/Stocks/GetVariantValueNotInProjectStocks',
                   type: 'POST',
                   data: { id: id },
                   success: function (data) {
                       $('.selectVariantValue').html(data);
                   },
                   error: function (err) {
                       alert(JSON.stringify(err));
                   }
               });
           });
           let counter = 0;
           $('.selectVariantValue').on('change',function () {
               let id = $(this).val();
               let variantValue = $('.selectVariantValue').find(':selected').text();
               if ($('.stockTable').find(`input[value="${id}"]`).length > 0) {
                   alert('This PPE already exists');
                   return;
               }
               counter++;
               $("#stockTable").append(
                   `<tr>
                       <td style="vertical-align: center">
                           <input type="hidden" name="VariantValue[${counter}]" value="${id}" class="form-control" />
                           ${variantValue} - ${counter}
                       </td>
                       <td>
                           <input type="text" name="StockIn[${counter}]" value="0" class="form-control" />
                       </td>
                       <td>
                           <input type="text" name="StockOut[${counter}]" value="0" class="form-control" />  
                       </td>
                       <td>
                           <input type="hidden" name="Date" value="12/12/2022" />
                           <input type="hidden" name="ProjectId" value="1" />
                           <a href="#" class="btn btn-danger btn-sm remove">Remove</a>
                       </td>   
                   </tr>`
               );
           });
           
           $(".stockTable").on('click', '.remove', function () {
               $(this).closest('tr').remove();
           });
       });
   </script>
}

