@model PPE.Models.Stock

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Stock</h4>
<hr />
<form asp-action="SaveStocks">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4 col-12">
                    <label asp-for="Date" class="control-label"></label>
                    <input 
                        asp-for="Date"  
                        class="form-control"/>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="col-md-4 col-12">
                    <label asp-for="ProjectId" class="control-label"></label>
                    <select 
                        asp-for="ProjectId" 
                        data-placeholder="Select a project"
                        class="form-control select2 selectProject"
                        asp-items="ViewBag.ProjectId">
                        <option></option>
                    </select>
                </div>
                <div class="col-md-4 col-12">
                    <label asp-for="VariantValueId" class="control-label"></label>
                    <select class="form-control select2 selectVariantValue">
                        @foreach (var item in ViewBag.VariantValueId)
                        {
                            <option value="@item.Value" selected="@item.Selected">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>
            </div>
            
                @*<div class="form-group">
                <label asp-for="StockIn" class="control-label"></label>
                <input asp-for="StockIn" class="form-control"/>
                <span asp-validation-for="StockIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockOut" class="control-label"></label>
                <input asp-for="StockOut" class="form-control"/>
                <span asp-validation-for="StockOut" class="text-danger"></span>
            </div>*@
            
            
                <div class="form-group mt-2">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>

            </div>
            <div class="col-md-12">
                <table class="table stockTable">
                    <thead>
                    <tr>
                        <th>PPE - Variant</th>
                        <th>Stock In</th>
                        <th>Stock Out</th>
                        <th>Options</th>
                    </tr></thead>
                    <tbody id="stockTable">
                        
                    </tbody>
                </table>
            </div>
        </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

