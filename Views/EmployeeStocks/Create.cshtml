<section class="card-body bg-white">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="projectId" value="@ViewData["ProjectId"]">
        <input type="hidden" name="functionId" value="@ViewData["FunctionId"]">
        <input type="hidden" name="EmployeeId" value="@ViewData["EmployeeId"]">
        <input type="hidden" name="StockIn" value="1">
        <div class="row">
            <div class="col-12 col-md-6 form-group">
                <label for=""></label>
                <input type="date" class="form-control" name="Date">
                <span class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 form-group">
                <label for=""></label>
                <select name="CategoryId" 
                        data-live-search="true" 
                        data-placeholder="-- Select Category --" 
                        class="form-control select2 categorySelect">
                    <option></option>
                    @foreach(var category in ViewBag.Category)
                    {
                        <option value="@category.Id">@category.Title</option>
                    }
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6">
                <select 
                    name="PpeId"
                    data-live-search="true" 
                    data-placeholder="-- Select Ppe --" 
                    class="form-control select2 ppeSelect">
                </select>
            </div>
            <div class="col-12 col-md-6">
                <select 
                    name="ppeAttributeCategoryAttributeValueId"
                    data-live-search="true" 
                    data-placeholder="-- Select Variant --" 
                    class="form-control select2 valueSelect">
                </select>
            </div>
        </div>
        <div class="form-group mt-2">
            <button class="btn btn-info" type="submit">Save changes</button>
        </div>
    </form>
</section>

@section Scripts
{
    <script >
        $(document).ready(function() {
            $('.select2').select2();
            $('.categorySelect').on('change', function() {
                let categoryId = $(this).val();
                let ppeSelect = $('.ppeSelect');
                ppeSelect.empty();
                $.ajax({
                    url: '/EmployeeStocks/GetPpes',
                    type: 'GET',
                    data: { categoryId: categoryId, projectId: @ViewBag.ProjectId },
                    success: function (data) {
                        ppeSelect.html(data)
                    }
                });
            });
            
            $('.ppeSelect').on('change', function() {
                let ppeId = $(this).val();
                let valueSelect = $('.valueSelect');
                valueSelect.empty();
                $.ajax({
                    url: '/EmployeeStocks/GetAttributesValues',
                    type: 'GET',
                    data: { ppeId: ppeId },
                    success: function (data) {
                        console.log(data)
                        valueSelect.html(data)
                    },
                    error: function (error) {
                        console.log(error)
                    }
                });
            });
        })
    </script>
}

 



