@model IEnumerable<PPE.Models.Function>

@{
    ViewData["Title"] = "Function List";
    ViewBag.Buttons = new List<ButtonModel> {
        new ButtonModel {
            Text = "Create function",
            Action = "Create",
            Controller = "Functions",
            ButtonType = "primary"
        }
    };
}
<div class="p-2">
    <button class="btn btn-primary">
        <i class="la la-file-excel-o"></i>
        Import functions from CSV
    </button>
    
    
    
</div>
<table class="table bg-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="la la-edit"></i>
                    </a> 
                    @*<a class="btn btn-sm btn-dark" asp-action="Details" asp-route-id="@item.Id">
                        <i class="la la-eye"></i>
                    </a> 
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="la la-trash"></i>
                    </a>*@
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
