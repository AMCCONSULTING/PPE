@model PPE.Models.Project

@{
    ViewData["Title"] = "Details Project - " + Model.Title;
}

<h1>Details</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prefix)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prefix)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<h5> Stock of PPEs</h5>
<table class="table bg-white">
    <thead>
    <th>#</th>
    <th>Ppe</th>
    <th>StockIn</th>
    <th>StockOut</th>
    <th>Current Stock</th>
    <th>Details</th>
    </thead>
    <tbody>
    @foreach (var item in ViewBag.GroupedStocks)
    {
        <tr>
            <td></td>
            <td>@item.PPE.Title</td>
            <td>@item.TotalStockIn.ToString()</td>
            <td>@item.TotalStockOut.ToString()</td>
            <td>@item.TotalStock.ToString()</td>
            <td>
                <a href="">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<h4>Stocks of PPEs</h4>
<div class="bg-white">
    <table class="table">
        <tr>
            <th>#</th>
            <th>Ppe</th>
            <th>Variant</th>
            <th>Value</th>
            <th>StockIn</th>
            <th>StockOut</th>
             <th>Current Stock</th>
        </tr>
        @foreach (var item in Model.Stocks)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.VariantValue.Variant.Ppe.Title</td>
                <td>@item.VariantValue.Variant.Title</td>
                <td>@item.VariantValue.Value</td>
                <td>@item.StockIn.ToString()</td>
                <td>@item.StockOut.ToString()</td>
                <td>@item.CurrentStock.ToString()</td>
            </tr>
        }
    </table>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
