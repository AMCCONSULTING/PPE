@using PPE.Data.Enums
@model Employee

@{
ViewBag.Title = "Add To Employee Stock";
    ViewBag.Buttons = new List<ButtonModel>
    {
        new ButtonModel
        {
            Text = "Back to list",
            Action = "Index",
            Controller = "Employees",
            ButtonType = "dark"
        }
    };

    var typeDotation = // enum TypeDotation
        Enum.GetValues(typeof(TypeDotation))
            .Cast<TypeDotation>()
            .Select(v => new SelectListItem
            {
                Text = v.ToString(),
                Value = ((int)v).ToString()
            });
}

<div class="card-body bg-white">
    <div class="row">
        <div class="col-12 col-lg-3">
            <h5>@Html.DisplayNameFor(model => model.FullName) | @Html.DisplayNameFor(model => model.Phone) </h5>
            <strong>@Html.DisplayFor(model => model.FullName) | @Html.DisplayFor(model => model.Phone)</strong>
        </div>
        <div class="col-12 col-lg-3">
            <h6>@Html.DisplayNameFor(model => model.Project)</h6>
            <strong>@Html.DisplayFor(model => model.Project!.Title)</strong>
        </div>
        <div class="col-12 col-lg-3">
            <h6>@Html.DisplayNameFor(model => model.Function)</h6>
            <strong>@Html.DisplayFor(model => model.Function!.Title)</strong>
        </div>
        <div class="col-12 col-lg-3">
            <h6>@Html.DisplayNameFor(model => model.Size) | @Html.DisplayNameFor(model => model.ShoeSize)</h6>
            <strong>@Html.DisplayFor(model => model.Size) | @Html.DisplayFor(model => model.ShoeSize)</strong>
        </div>
    </div>
</div>

<section class="card-body bg-white">
    <form asp-action="AddToEmployeeStock">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProjectId">
        <input type="hidden" asp-for="FunctionId">
        <input type="hidden" name="EmployeeId" value="@Model.Id">
        <div class="row">
            <div class="col-12 col-md-4 form-group">
                <label for=""></label>
                <input type="date" class="form-control" name="Date">
                <span class="text-danger"></span>
            </div>
            <div class="col-12 col-md-4 form-group">
                <label for=""></label>
                <select name="VariantValueId" 
                        data-live-search="true" 
                        data-placeholder="-- Select Category --" 
                        class="form-control select2 categorySelect">
                    <option></option>
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="col-12 col-md-4">
                <select 
                    data-live-search="true" 
                    data-placeholder="-- Select Ppe --" 
                    class="form-control select2 ppeSelect">
                </select>
            </div>
            <div class="col-12 col-md-4">
                <select
                    data-live-search="true"
                    data-placeholder="-- Select Type dotation --"
                    class="form-control select2">
                    <option></option>
                    @foreach(var item in typeDotation)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <input type="button" onclick="submitBtn()" value="Save changes" class="btn btn-primary"/> 
        </div>
    </form>
</section>

@section Scripts
{
    <script >
        $(document).ready(function() {
            $('.select2').select2();
            $('.categorySelect').on('change', function() {
                let categoryId = $(this).val();
                let ppeSelect = $('.ppeSelect');
                ppeSelect.empty();
                $.ajax({
                    url: '/EmployeeStocks/GetPpes',
                    type: 'GET',
                    data: { categoryId: categoryId },
                    success: function (data) {
                        $.each(data, function (i, item) {
                            ppeSelect.append($('<option>', {
                                value: item.id,
                                text: item.title
                            }));
                        });
                    }
                });
            });
        })
    </script>
}

 

