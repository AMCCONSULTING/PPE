@model PPE.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}

<div class="d-flex justify-content-between align-items-center">
    <h3 class="card-title">Create Employee</h3>
    <a asp-action="Index" class="btn btn-dark btn-sm">Back to list</a>
</div>

<div class="card">
    <!-- /.card-header -->
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-12 col-md-6 form-group">
                    <label asp-for="FirstName" class="label-control"></label>
                    <input asp-for="FirstName" class="form-control"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6 form-group">
                    <label asp-for="LastName" class="label-control"></label>
                    <input asp-for="LastName" class="form-control"/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-6 form-group">
                    <label asp-for="NNI" class="label-control"></label>
                    <input asp-for="NNI" class="form-control"/>
                    <span asp-validation-for="NNI" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6 form-group">
                    <label asp-for="Phone" class="label-control"></label>
                    <input asp-for="Phone" class="form-control"/>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-6 form-group">
                    <label asp-for="Tel" class="form-label"></label>
                    <input asp-for="Tel" class="form-control"/>
                    <span asp-validation-for="Tel" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6 form-group">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender"
                            data-live-search="true" data-placeholder="-- Select Gender --"
                            class="form-control select2" asp-items="ViewBag.Gender">
                        <option></option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-6 form-group">
                    <label asp-for="ProjectId" class="form-label"></label>
                    <select asp-for="ProjectId"
                            data-live-search="true" data-placeholder=" -- Select project --"
                            class="form-control select2" asp-items="ViewBag.ProjectId">
                        <option></option>
                    </select>
                </div>
                <div class="col-12 col-md-6 form-group">
                    <label asp-for="FunctionId" class="form-label"></label>
                    <select asp-for="FunctionId"
                            data-live-search="true"
                            data-placeholder="-- Select Function --"
                            class="form-control select2" asp-items="ViewBag.FunctionId">
                        <option></option>
                    </select>
                </div>
            </div>

            <div class="mt-2">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




