@model IEnumerable<PPE.Models.Employee>

@{
    ViewData["Title"] = "Employees List";
    ViewBag.Buttons = new List<ButtonModel> {
        new ButtonModel {
            Text = "Create employee",
            Action = "Create",
            Controller = "Employees",
            ButtonType = "primary"
        }
    };
}

<div class="card-body bg-white">
    <div class="card-header">
        <div class="row">
            <div class="col-12 col-md-4 form-group">
                <label> <i class="la la-filter"></i>Project</label>
                <select class="form-control select2" data-filter="project">
                    <option></option>
                    @foreach (var project in ViewBag.Projects)
                    {
                        <option value="@project.Id">@project.Title</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-4 form-group">
                <label><i class="la la-filter"></i>Function</label>
                <select class="form-control select2" data-filter="function">
                    <option></option>
                    @foreach (var function in ViewBag.Functions)
                    {
                        <option value="@function.Id">@function.Title</option>
                    }
                </select>
            </div>
            @*<div class="col-12 col-md-4 form-group">
                <label><i class="la la-filter"></i>Search by (name, phone, nni)</label>
                <input type="text" class="form-control" placeholder="-- Search --" id="filter-name">
            </div>*@
        </div>
    </div>
    <table class="table responsive w-100"
           data-column="matricule,fullName,nni,project,isActive,function,actions"
           data-url="/api/employees">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Function)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
