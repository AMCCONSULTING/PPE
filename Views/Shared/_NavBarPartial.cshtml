@using Microsoft.EntityFrameworkCore
@using System.Security.Principal
@using System.Security.Claims
@inject PPE.Data.AppDbContext _context
@{
    var ppeBelowThresholdCount = _context.MainStocks
        .Include(ms => ms.PpeAttributeCategoryAttributeValue)
        .ThenInclude(pacav => pacav.Ppe)
        .Count(ms => ms.QuantityIn - ms.QuantityOut < ms.PpeAttributeCategoryAttributeValue.Ppe.Threshold);

    var ppeBelowThreshold = _context.MainStocks
        .Include(ms => ms.PpeAttributeCategoryAttributeValue)
        .ThenInclude(pacav => pacav.Ppe)
        .GroupBy(ms => ms.PpeAttributeCategoryAttributeValue.Ppe)
        .Where(ms => ms.Sum(x => x.QuantityIn - x.QuantityOut) < ms.Key.Threshold)
        .Select(ms => new { 
            Ppe = ms.Key, 
            QuantityIn = ms.Sum(x => x.QuantityIn), 
            QuantityOut = ms.Sum(x => x.QuantityOut) ,
            Quantity = ms.Sum(x => x.QuantityIn - x.QuantityOut)
        });
    
    var userName = User.Claims.FirstOrDefault(c => c.Type == "name")?.Value;
}

