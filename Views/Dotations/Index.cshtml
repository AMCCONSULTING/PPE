@using Microsoft.EntityFrameworkCore
@model IEnumerable<PPE.Models.Dotation>
@inject PPE.Data.AppDbContext _context

@{
    ViewData["Title"] = "Liste des dotations";
    var projects = _context.Employees.ToList();
    var magaziniers = _context.Magaziniers
        .Include(m => m.Employee)
        .ToList();
    
}

<div class="card">
    <div class="card-header">
        <div class="filters">
            <div class="row">
                <div class="col-md-3 form-group">
                    <label class="control-label">
                        <i class="la la-filter"></i>
                        Date de l'alimentation
                    </label>
                    <input type="date" class="form-control" data-filter="startDate"/>
                    <span class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label class="control-label">
                        <i class="la la-filter"></i>
                        Date de l'alimentation
                    </label>
                    <input type="date" class="form-control" data-filter="endDate" />
                    <span class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label class="control-label">
                        <i class="la la-filter"></i>
                        Employé
                    </label>
                    <select 
                        data-placeholder="--Select--"
                        class="form-control select2" data-filter="employee">
                        <option></option>
                        @foreach (var item in projects)
                        {
                            <option value="@item.Id">@item.FullName</option>
                        }
                    </select>
                    <span class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label class="control-label">
                        <i class="la la-filter"></i>
                        Magasinier
                    </label>
                    <select 
                        data-placeholder="--Select--"
                        class="form-control select2" data-filter="magasinier">
                        <option></option>
                        @foreach (var item in magaziniers)
                        {
                            <option value="@item.Id">@item.Employee.FullName</option>
                        }
                    </select>
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <table class="table responsive"
               data-column="date,reference,employee,typeDotation,magasinier,coordinateur,document,actions"
               data-url="/api/dotations/getdotations">
            <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Date)</th>
                <th>@Html.DisplayNameFor(model => model.Reference)</th>
                <th>@Html.DisplayNameFor(model => model.Employee)</th>
                <th>@Html.DisplayNameFor(model => model.Type)</th>
                <th>@Html.DisplayNameFor(model => model.Magasinier)</th>
                <th>@Html.DisplayNameFor(model => model.Coordinator)</th>
                <th>@Html.DisplayNameFor(model => model.Document)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>

</div>


